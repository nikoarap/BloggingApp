<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:padding="10sp"
    android:id="@+id/parent_layout_3">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card_view2"
        app:cardElevation="100dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:id="@+id/comment_image"
                android:paddingBottom="5sp"
                android:src="@mipmap/ic_launcher_round"/>

            <TextView
                android:id="@+id/comment_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username"
                android:textStyle="bold"
                android:textColor="@color/Gray"
                android:layout_marginTop="7sp"
                android:layout_marginLeft="10sp"
                android:layout_toRightOf="@id/comment_image"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/comment_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date"
                android:textStyle="bold"
                android:textColor="@color/Gray"
                android:layout_marginTop="7sp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/comment_username"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/comment_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/comment_username"
                android:text="Email"
                android:textColor="#000"
                android:layout_centerVertical="true"
                android:layout_marginLeft="50sp"
                android:layout_marginTop="2sp"
                android:textSize="13sp" />


            <TextView
                android:id="@+id/comment_body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/comment_email"
                android:text="Body"
                android:textColor="#616161"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10sp"
                android:layout_marginStart="10sp"
                android:layout_marginTop="10sp"
                android:textSize="15sp"/>



        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>